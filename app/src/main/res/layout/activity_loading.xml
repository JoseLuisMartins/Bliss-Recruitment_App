<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable name="loadingViewModel" type="bliss.blissrecruitmentapp.viewmodel.LoadingActivityViewModel"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.LoadingActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="@{loadingViewModel.loading ? View.GONE : View.VISIBLE }"
           >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{loadingViewModel.status}" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClickListener="@{loadingViewModel.refresh()}"
                android:text="@string/btn_loading_activity_refresh" />
        </LinearLayout>

    </LinearLayout>
</layout>