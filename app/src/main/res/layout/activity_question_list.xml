<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="questionListViewModel" type="bliss.blissrecruitmentapp.viewmodel.QuestionListViewModel"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.QuestionListActivity"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hint_question_activity_search_query"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_question_activity_search" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_activity_question_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" />

    </LinearLayout>
</layout>