<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable name="questionListViewModel" type="bliss.blissrecruitmentapp.viewmodel.QuestionListViewModel"/>
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.QuestionListActivity"
        >

        <android.support.v7.widget.SearchView
            android:id="@+id/view_activity_question_list_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_activity_question_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:scrollbars="vertical">
        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/view_activity_question_list_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{questionListViewModel.loading ? View.VISIBLE : View.GONE}"
            />

    </LinearLayout>
</layout>